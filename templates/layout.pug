<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    link(rel="stylesheet" type="text/css" href="/css/styles.css")
    link(href="https://fonts.googleapis.com/css?family=IM+Fell+English:400i" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=IM+Fell+English:400i|Raleway" rel="stylesheet")
    block title
  body
    if isLoggedIn === false
      div.header
        div.headerTitle
          a(href='/') _ARCHITEKT
        div.headerText Sample text
        div.loginFunction
          a(href='/login')
            button(type="submit") Login
            a(href='/registration')
              button(type='submit') Register
          p hh #{flashMessage}
    else
      div.header
        div.headerTitle
          a(href='/') _ARCHITEKT
        div.headerText Sample text
        div.loginFunction
          form(method="GET" action="/logout")
            button(type="submit") Logout
          a(href='/userprofile')
            button(type="submit") Profile
          p hh #{flashMessage}
    block body

